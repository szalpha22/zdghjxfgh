<%- include('../partials/header', { user }) %>

<div class="container mx-auto px-6 py-12">
  <h1 class="text-4xl font-bold mb-8 gold-text">🏆 Leaderboard</h1>
  
  <div class="card-dark rounded-xl p-8">
    <div class="space-y-4">
      <% leaderboard.forEach((creator, index) => { %>
        <div class="flex items-center justify-between p-4 bg-gray-900 rounded-lg <%= index < 3 ? 'border-2 border-[#E31E24]' : '' %>">
          <div class="flex items-center space-x-4">
            <div class="text-2xl font-bold <%= index === 0 ? 'gold-text' : '' %>">
              <%= index === 0 ? '👑' : index === 1 ? '🥈' : index === 2 ? '🥉' : `#${index + 1}` %>
            </div>
            <div>
              <div class="font-bold text-lg"><%= creator.username %></div>
              <div class="text-sm text-gray-400"><%= creator.approved_clips %> clips</div>
            </div>
          </div>
          <div class="text-right">
            <div class="text-xl font-bold gold-text"><%= creator.total_views.toLocaleString() %></div>
            <div class="text-sm text-gray-400">views</div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>

<%- include('../partials/header', { user }) %>

<div class="relative">
  <!-- Hero Section with Animations -->
  <div class="container mx-auto px-6 py-24">
    <div class="text-center mb-24">
      <div class="slide-up mb-8">
        <h1 class="text-7xl md:text-8xl font-black mb-6 leading-tight">
          <span class="gold-text">Create.</span> 
          <br>
          <span class="text-white">Clip.</span> 
          <br>
          <span class="gold-text">Earn.</span>
        </h1>
      </div>
      
      <p class="slide-up delay-2 text-xl md:text-2xl text-gray-300 mb-12 max-w-3xl mx-auto leading-relaxed">
        Join the premium creator network. Submit your best clips, earn rewards, and compete with top creators worldwide.
      </p>
      
      <div class="slide-up delay-3">
        <% if (!user) { %>
          <a href="/auth/discord" class="inline-flex items-center space-x-3 px-10 py-5 gold-gradient text-black font-bold text-xl rounded-xl btn-gold">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"/>
            </svg>
            <span>Get Started with Discord</span>
          </a>
        <% } else { %>
          <a href="/campaigns" class="inline-flex items-center space-x-3 px-10 py-5 gold-gradient text-black font-bold text-xl rounded-xl btn-gold">
            <span>Browse Campaigns</span>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
            </svg>
          </a>
        <% } %>
      </div>
    </div>

    <!-- Stats Section -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-24 slide-up delay-4">
      <div class="glass-card rounded-2xl p-8 text-center">
        <div class="text-5xl font-black gold-text mb-2"><%= campaigns.length %></div>
        <div class="text-gray-400 text-lg">Active Campaigns</div>
      </div>
      <div class="glass-card rounded-2xl p-8 text-center">
        <div class="text-5xl font-black gold-text mb-2">$<%= campaigns.reduce((sum, c) => sum + (parseFloat(c.total_budget) || 0), 0).toFixed(2) %></div>
        <div class="text-gray-400 text-lg">Total Pool</div>
      </div>
      <div class="glass-card rounded-2xl p-8 text-center">
        <div class="text-5xl font-black gold-text mb-2">24/7</div>
        <div class="text-gray-400 text-lg">Auto Tracking</div>
      </div>
    </div>

    <!-- Active Campaigns -->
    <% if (campaigns.length > 0) { %>
      <div class="mb-24">
        <div class="slide-up delay-5">
          <h2 class="text-4xl md:text-5xl font-bold mb-12 text-center">
            <span class="gold-text">🎬 Active Campaigns</span>
          </h2>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <% campaigns.forEach((campaign, index) => { %>
            <div class="glass-card rounded-2xl p-8 slide-up glow-hover" style="animation-delay: <%= 0.6 + (index * 0.1) %>s;">
              <div class="flex items-start justify-between mb-4">
                <h3 class="text-2xl font-bold"><%= campaign.name %></h3>
                <span class="px-3 py-1 gold-gradient text-black text-sm font-semibold rounded-full">
                  <%= campaign.type %>
                </span>
              </div>
              
              <p class="text-gray-400 mb-6 leading-relaxed">
                <%= campaign.description || 'Create amazing clips and earn rewards' %>
              </p>
              
              <div class="flex items-center justify-between mb-6 p-4 bg-black/40 rounded-xl">
                <div>
                  <div class="text-sm text-gray-500">Rate per 1K views</div>
                  <div class="text-2xl font-bold gold-text">$<%= campaign.rate_per_1k %></div>
                </div>
                <div class="text-right">
                  <div class="text-sm text-gray-500">Platform</div>
                  <div class="text-lg font-semibold text-white"><%= campaign.platform || 'All' %></div>
                </div>
              </div>
              
              <a href="/campaigns" class="block w-full text-center py-4 gold-gradient text-black font-bold text-lg rounded-xl btn-gold">
                View Details
              </a>
            </div>
          <% }) %>
        </div>
      </div>
    <% } %>

    <!-- Features Section -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mt-32 mb-24">
      <div class="text-center slide-up delay-6">
        <div class="w-24 h-24 gold-gradient rounded-3xl mx-auto mb-6 flex items-center justify-center float glow">
          <span class="text-5xl">📈</span>
        </div>
        <h3 class="text-2xl font-bold mb-4">Automated Tracking</h3>
        <p class="text-gray-400 text-lg leading-relaxed">
          Real-time view tracking across YouTube, TikTok, Instagram, and Twitter with fraud detection
        </p>
      </div>
      
      <div class="text-center slide-up delay-6" style="animation-delay: 0.7s;">
        <div class="w-24 h-24 gold-gradient rounded-3xl mx-auto mb-6 flex items-center justify-center float glow" style="animation-delay: 0.5s;">
          <span class="text-5xl">💰</span>
        </div>
        <h3 class="text-2xl font-bold mb-4">Fast Payouts</h3>
        <p class="text-gray-400 text-lg leading-relaxed">
          Multiple payout methods with quick approval and transparent tracking
        </p>
      </div>
      
      <div class="text-center slide-up delay-6" style="animation-delay: 0.8s;">
        <div class="w-24 h-24 gold-gradient rounded-3xl mx-auto mb-6 flex items-center justify-center float glow" style="animation-delay: 1s;">
          <span class="text-5xl">🏆</span>
        </div>
        <h3 class="text-2xl font-bold mb-4">Global Leaderboard</h3>
        <p class="text-gray-400 text-lg leading-relaxed">
          Compete with top creators and climb the ranks to earn bonus rewards
        </p>
      </div>
    </div>

    <!-- CTA Section -->
    <% if (!user) { %>
      <div class="glass-card rounded-3xl p-16 text-center mt-32 slide-up glow">
        <h2 class="text-4xl md:text-5xl font-bold mb-6">
          Ready to Start <span class="gold-text">Earning?</span>
        </h2>
        <p class="text-xl text-gray-300 mb-10 max-w-2xl mx-auto">
          Join thousands of creators already earning with ClipHub. Sign in with Discord and start your journey today.
        </p>
        <a href="/auth/discord" class="inline-flex items-center space-x-3 px-12 py-6 gold-gradient text-black font-bold text-xl rounded-xl btn-gold">
          <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"/>
          </svg>
          <span>Get Started Now</span>
        </a>
      </div>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>
